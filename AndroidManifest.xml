<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.se_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ship"
        android:label="@string/app_name" >
        <activity
            android:name="com.spaceshooter.game.menu.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spaceshooter.game.GameActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoBackground" >
            <intent-filter>
                <action android:name="android.intent.action.GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spaceshooter.game.database.HighScoreList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.HIGHSCORELIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spaceshooter.game.settings.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.SETTINGSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spaceshooter.game.menu.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.CREDTISACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>